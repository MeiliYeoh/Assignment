<?xml version="1.0" encoding="utf-8"?>
<!-- appointment_item.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">



        <!-- ImageView，用于醫生的图片 -->
        <ImageView
            android:id="@+id/doctorImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/profile" />

        <!-- 垂直布局，包含 doctorName、appointmentDate 和 appointmentTime -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 醫生名字 -->
            <TextView
                android:id="@+id/doctorNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- appointment的日期 -->
            <TextView
                android:id="@+id/appointmentDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="16sp" />

            <!-- appointment的时间 -->
            <TextView
                android:id="@+id/appointmentTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
