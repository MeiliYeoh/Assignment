<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <!-- 选择支付方式的标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:paddingBottom="20dp"
            android:text="Select the payment method you want to use"
            android:textSize="16sp"
            android:textStyle="normal" />

        <!-- 第一个支付方式 - Google Pay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- 图像视图 -->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/google" />

            <!-- 文本视图 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="Google Pay"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/googlePayRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="0" />
        </LinearLayout>


        <!-- 第二个支付方式 - PayPal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- 图像视图 -->
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/paypal" />

            <!-- 文本视图 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="Pay Pal"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/paypalRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="0" />
        </LinearLayout>


        <!-- 第三个支付方式 - Tngo Wallet -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- 图像视图 -->
            <ImageView
                android:id="@+id/paymentImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/tngo" />

            <!-- 文本视图 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="Tngo Wallet"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/tngoRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="0" />
        </LinearLayout>

    </LinearLayout>
    <!-- 添加支付按钮等其他内容 -->
    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/timebutton"
        android:text="Next" />

</FrameLayout>
